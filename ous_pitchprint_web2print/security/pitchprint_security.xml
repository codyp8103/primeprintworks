<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_pitchprint">
            <field name="name">PitchPrint</field>
            <field name="description">PitchPrint - Web2Print</field>
            <field name="sequence">20</field>
    </record>

    <record id="group_pitchprint_user" 
        model="res.groups">
        <field name="name">User</field>
        <field name="category_id" 
        ref="ous_pitchprint_web2print.module_category_pitchprint" />
        <field name="users" 
        eval="[(4, ref('base.default_user'))]" />
    </record>

    <record id="group_pitchprint_admin" 
        model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" 
        ref="ous_pitchprint_web2print.module_category_pitchprint" />
        <field name="implied_ids" 
        eval="[(4, ref('group_pitchprint_user'))]" />
    </record>

    <record id="base.group_system" 
      model="res.groups">
      <field name="implied_ids" 
        eval="[(4, ref('group_pitchprint_admin'))]" />
    </record>

    <record model="ir.model.access" id="access_product_design_admin">
        <field name="name">ous_pitchprint_web2print.product_design_admin</field>
        <field name="model_id" ref="model_product_design" />
        <field name="group_id" ref="ous_pitchprint_web2print.group_pitchprint_admin" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_unlink" eval="1" />
    </record>

    <record model="ir.model.access" id="access_product_design_user">
        <field name="name">ous_pitchprint_web2print.product_design_user</field>
        <field name="model_id" ref="model_product_design" />
        <field name="group_id" ref="ous_pitchprint_web2print.group_pitchprint_user" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_unlink" eval="0" />
    </record>

    <record model="ir.model.access" id="access_product_design_public">
        <field name="name">ous_pitchprint_web2print.product_design_public</field>
        <field name="model_id" ref="model_product_design" />
        <field name="group_id" ref="base.group_public" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="0" />
        <field name="perm_write" eval="0" />
        <field name="perm_unlink" eval="0" />
    </record>

    <record model="ir.model.access" id="access_product_design_portal">
        <field name="name">ous_pitchprint_web2print.product_design_portal</field>
        <field name="model_id" ref="model_product_design" />
        <field name="group_id" ref="base.group_portal" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="0" />
        <field name="perm_write" eval="0" />
        <field name="perm_unlink" eval="0" />
    </record>
</odoo>