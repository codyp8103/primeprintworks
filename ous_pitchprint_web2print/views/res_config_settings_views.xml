<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pitchprint</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="5"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- V17 replaced old settings formatting -->
            <xpath expr="//form" position="inside">
                <app data-string="PitchPrint" string="PitchPrint" name="ous_pitchprint_web2print">
                    <block title="PitchPrint API Settings">
                        <setting>
                            <div class="content-group">
                                <div class="row mt8">
                                    <label for="pp_api_key" class="col-lg-5 o_light_label"/>
                                    <field name="pp_api_key"/>
                                </div>
                                <div class="row mt8">
                                    <label for="pp_secret_key" class="col-lg-5 o_light_label"/>
                                    <field name="pp_secret_key" password="True"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                    <block title="PitchPrint Preferences">
                        <setting string="Email Template for Sale Order Confirmation">
                            <field name="pp_mail_template_id"/>
                        </setting>
                    </block>
                    <!-- <block title="Require Login to Checkout" help="Force public users to login with an account before being able to complete checkout">
                        <setting>
                            <field name="require_login_checkout"/>
                        </setting>
                    </block> -->
                    <block title="PitchPrint Control Panel">
                        <setting>
                            <button string="Fetch Latest Designs" name="fetch_pitchprint_data" type="object" class="btn-primary" confirm="Are you sure you wish to download the latest data?"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>