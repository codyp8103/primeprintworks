<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.act_url" id="pitchprint_admin_portal_action">
        <field name="name">Admin Portal</field>
        <field name="url">http://admin.pitchprint.com</field>
        <field name="target">new</field>
    </record>
    <record id="pitchprint_product_design_action" model="ir.actions.act_window">
        <field name="name">Product Designs</field>
        <field name="res_model">product.design</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <record id="pitchprint_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'ous_pitchprint_web2print', 'bin_size': False}</field>
    </record>
    <record id="pitchprint_products_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{"default_is_pitchprint_design": True}</field>
        <field name="domain">[("is_pitchprint_design", "=", True)]</field>
    </record>
    <record id="pitchprint_product_variants_action" model="ir.actions.act_window">
        <field name="name">Product Variants</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context"></field>
        <field name="domain">[("is_pitchprint_design", "=", True)]</field>
    </record>
    <record id="pitchprint_orders_action" model="ir.actions.act_window">
        <field name="name">Web2Print Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="context"></field>
        <field name="domain">[("order_line.pitchprint_project_id", "!=", False)]</field>
    </record>
    <menuitem id="pitchprint_menu_root" name="PitchPrint" web_icon="ous_pitchprint_web2print,static/description/icon.png" groups="ous_pitchprint_web2print.group_pitchprint_user">
        <menuitem
            id="pitchprint_orders"
            name="Web2Print Orders"
            sequence="10"
            action="pitchprint_orders_action"
        />
        <menuitem
            id="pitchprint_products_root"
            name="Web2Print Products"
            sequence="11"
        >
            <menuitem
                id="pitchprint_product_design"
                name="PitchPrint Designs"
                sequence="10"
                action="pitchprint_product_design_action"
            />
            <menuitem
                id="pitchprint_products"
                name="Products"
                sequence="11"
                action="pitchprint_products_action"
            />
            <menuitem
                id="pitchprint_product_variants"
                name="Product Variants"
                sequence="12"
                action="pitchprint_product_variants_action"
            />
        </menuitem>
        <menuitem
            id="pitchprint_admin_portal"
            name="Admin Portal"
            sequence="12"
            action="pitchprint_admin_portal_action"
        />
        <menuitem id="pitchprint_config" name="Configuration" sequence="13" groups="ous_pitchprint_web2print.group_pitchprint_admin">
            <menuitem
                id="pitchprint_settings"
                name="Settings"
                sequence="10"
                action="pitchprint_settings_action"
            />
        </menuitem>
    </menuitem>
</odoo>