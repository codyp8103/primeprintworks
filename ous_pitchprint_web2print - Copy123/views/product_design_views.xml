<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_design_view_kanban" model="ir.ui.view">
        <field name="name">product.design.view.kanban</field>
        <field name="model">product.design</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="design_id"/>
                <field name="unit"/>
                <field name="lastModified"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image mr-1">
                                <img t-att-src="kanban_image('product.design', 'image', record.id.raw_value)" alt="Design" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top mb-0">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <strong><field name="name"/></strong>
                                        </strong>
                                    </div>
                                </div>
                                <t t-if="record.category_id.value">[<field name="category_id"/>]</t>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="product_design_view_form" model="ir.ui.view">
        <field name="name">product.design.view.form</field>
        <field name="model">product.design</field>
        <field name="arch" type="xml">
            <form string="Product Designs">
                <header></header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="get_products" type="object" class="oe_stat_button" icon="fa-archive">
                            <field string="Products" name="product_count" widget="statinfo"/>
                        </button>
                        <button name="get_variants" type="object" class="oe_stat_button" icon="fa-sitemap">
                            <field string="Variants" name="variant_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="category_id"/>
                            <field name="design_id"/>
                            <field name="unit"/>
                            <field name="lastModified"/>
                        </group>
                        <group>
                            <field name="image" widget="image" string=""/>
                        </group>
                    </group>
                    <!-- <notebook>
                        <page string="Preview">
                            <group>
                            </group>
                        </page>
                    </notebook> -->
                </sheet>
            </form>
        </field>
    </record>
    <record id="product_design_view_tree" model="ir.ui.view">
        <field name="name">product.design.view.tree</field>
        <field name="model">product.design</field>
        <field name="arch" type="xml">
            <tree string="Product Designs">
                <field name="name"/>
                <field name="category_id"/>
                <field name="design_id"/>
            </tree>
        </field>
    </record>
    <record id="product_design_view_search" model="ir.ui.view">
        <field name="name">product.design.view.search</field>
        <field name="model">product.design</field>
        <field name="arch" type="xml">
            <search string="Product Designs">
                <field name="name"/>
                <field name="design_id"/>
                <filter string="Archived" domain="[('active', '=', False)]" name="archived"/>
                <filter string="Archived-In Use" domain="['&amp;', ('active', '=', False), '|', ('product_id', '!=', False), ('variant_id', '!=', False)]" name="archivedinuse"/>
                <group expand="0" string="Group By" colspan="16">
                    <filter string="Category" name="category" context="{'group_by':'category_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>