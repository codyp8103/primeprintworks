<?xml version="1.0"?>
<odoo>
    <record id="view_sale_order_inherit_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_template_id']" position="after">
                <field name="pitchprint_project_id" optional="hide"/>
                <!-- V17 - Replaced attrs -->
                <button name="action_view_pp_design" type="object" string="Design Preview" class="btn-primary" invisible="not pitchprint_project_id"/>
            </xpath>
        </field>
    </record>
</odoo>